{% extends 'layout.njk' %}

{% block head %}
    <title>{{ recipe.title }}</title>
{% endblock %}

{% block content %}
    <main id="recipe-details">
        <section id="recipe-header">
            <img src="{{ recipe.image }}" alt="Imagem de {{ recipe.title }}">
            <div class="info">
                <h1>{{ recipe.title }}</h1>
                <p class="author">por
                    {{ recipe.author }}</p>
            </div>
        </section>
        <section id="ingredients" class="details">
            <h2>Ingredientes</h2>
            <a>MOSTRAR</a>
            <div class="content hidden">
                <ul>
                    {% for ingredient in recipe.ingredients %}
                        <li>{{ ingredient }};</li>
                    {% endfor %}
                </ul>
            </div>
        </section>
        <section id="preparation" class="details">
            <h2>Modo de preparo</h2>
            <a>MOSTRAR</a>
            <div class="content hidden">
                <ul>
                    {% for step in recipe.preparation %}
                        <li>{{ step }}</li>
                    {% endfor %}
                </ul>
            </div>
        </section>
        <section id="information" class="details">
            <h2>Informações adicionais</h2>
            <a>MOSTRAR</a>
            <div class="content hidden">
                <p>{{ recipe.information }}</p>
            </div>
        </section>
    </main>
{% endblock %}