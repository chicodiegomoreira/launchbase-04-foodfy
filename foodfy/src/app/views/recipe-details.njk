<section id="details-header">
    <div class="gallery">
        <div class="highlight">
            <img
                src="{{ recipe.images[0].src }}"
                alt="Imagem de {{ recipe.title }}"
            >
        </div>
        <div class="gallery-preview">
            {% for image in recipe.images %}
                <img
                    src="{{ image.src }}"
                    alt="Imagem de {{ recipe.title }}"
                    {% if loop.index0 == 0 %}
                        class="active"
                    {% endif %}
                    onclick="ImageGallery.setImage(event)"
                >
            {% endfor %}
        </div>
    </div>
    <div class="info">
        <h1>{{ recipe.title }}</h1>
        <p class="author">por
            {{ recipe.chef_name }}</p>
    </div>
</section>
<section id="ingredients">
    <h2>Ingredientes</h2>
    <a class="show-hide">MOSTRAR</a>
    <div class="content hidden">
        <ul>
            {% for ingredient in recipe.ingredients %}
                <li>{{ ingredient }};</li>
            {% endfor %}
        </ul>
    </div>
</section>
<section id="preparation">
    <h2>Modo de preparo</h2>
    <a class="show-hide">MOSTRAR</a>
    <div class="content hidden">
        <ul>
            {% for step in recipe.preparation %}
                <li>{{ step }}</li>
            {% endfor %}
        </ul>
    </div>
</section>
<section id="information">
    <h2>Informações adicionais</h2>
    <a class="show-hide">MOSTRAR</a>
    <div class="content hidden">
        <p>{{ recipe.information }}</p>
    </div>
</section>