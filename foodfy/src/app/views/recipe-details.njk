<section id="details-header">
    <img src="{{ recipe.images[0].src }}" alt="Imagem de {{ recipe.title }}">
    <div class="info">
        <h1>{{ recipe.title }}</h1>
        <p class="author">por
            {{ recipe.chef_name }}</p>
    </div>
</section>
<section id="ingredients">
    <h2>Ingredientes</h2>
    <a class="show-hide">MOSTRAR</a>
    <div class="content hidden">
        <ul>
            {% for ingredient in recipe.ingredients %}
                <li>{{ ingredient }};</li>
            {% endfor %}
        </ul>
    </div>
</section>
<section id="preparation">
    <h2>Modo de preparo</h2>
    <a class="show-hide">MOSTRAR</a>
    <div class="content hidden">
        <ul>
            {% for step in recipe.preparation %}
                <li>{{ step }}</li>
            {% endfor %}
        </ul>
    </div>
</section>
<section id="information">
    <h2>Informações adicionais</h2>
    <a class="show-hide">MOSTRAR</a>
    <div class="content hidden">
        <p>{{ recipe.information }}</p>
    </div>
</section>